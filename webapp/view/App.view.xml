<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sap.ui.demo.todo.controller.App" displayBlock="true">
	<Shell>
		<App>
			<Page title="{i18n>TITLE}" backgroundDesign="Solid">
				<subHeader>
					<Toolbar>
						<SearchField
							id="searchTodoItemsInput"
							liveChange="onSearch"
							width="100%" />
					</Toolbar>
				</subHeader>
				<content>
					<Input class="todoInput" id="addTodoItemInput" value="{/newTodo}" placeholder="{i18n>INPUT_PLACEHOLDER}" change="addTodo" />
					<List id="todoList"
						items="{ path: '/todos', events: { change: '.updateItemsLeftCount' } }"
						mode="MultiSelect"
						growing="true"
						growingScrollToLoad="true"
						showNoData="false"
						showSeparators="None"
						rememberSelections="false">
						<infoToolbar>
							<Toolbar>
								<Label id="itemsLeftLabel" text="{= ${/itemsLeftCount} === 1 ? ${/itemsLeftCount} + ' item left' : ${/itemsLeftCount} + ' items left' }"/>
							</Toolbar>
						</infoToolbar>
						<CustomListItem selected="{completed}">
							<Input class="todoListInput" enabled="{=!${completed}}" value="{title}"/>
						</CustomListItem>
					</List>
				</content>
				<footer>
					<Bar>
						<contentMiddle>
							<Button id="clearCompleted" enabled="{/itemsRemovable}" icon="sap-icon://delete" text="Clear completed" press="clearCompleted" />
						</contentMiddle>
					</Bar>
				</footer>
			</Page>
		</App>
	</Shell>
</mvc:View>
